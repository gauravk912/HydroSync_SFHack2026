generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId

  username     String   @unique
  passwordHash String

  role         String
  orgName      String
  city         String
  state        String
  address      String
  consumerType String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}